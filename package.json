{
  "name": "electron-test",
  "version": "0.1.0",
  "private": true,
  "author": "Sipgate",
  "homepage": "./",
  "description": "app-web",
  "main": "electron/bundle.js",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "concurrently": "^5.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-notarize": "^0.3.0",
    "env-cmd": "^10.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "ts-loader": "^7.0.1",
    "typescript": "~3.7.2",
    "wait-on": "^4.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:electron": "yarn run bundle:electron:dev && env-cmd -f ./env/.env.electron concurrently \"node ./bin/electron-dev\" \"react-scripts start\"",
    "compile:electron": "yarn run bundle:electron:prod && env-cmd -f ./env/.env.build.electron yarn run build",
    "electron-builder": "DEBUG=electron-notarize electron-builder",
    "build:electron": "yarn run compile:electron && DEBUG=electron-notarize electron-builder",
    "bundle:electron:dev": "webpack --config electron/webpack.config.js --mode development",
    "bundle:electron:prod": "webpack --config electron/webpack.config.js --mode production",
    "publish:electron": "yarn run compile:electron && electron-builder --publish always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "webpack-cli": "^3.3.11",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1"
  }
}
